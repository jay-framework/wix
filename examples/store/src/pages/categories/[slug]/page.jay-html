<html>
  <head>
    <script type="application/jay-headless"
            plugin="@jay-framework/wix-stores"
            contract="category-page"
            key="categoryPage"
    ></script>
    <script type="application/jay-headless"
            plugin="@jay-framework/wix-stores"
            contract="cart-indicator"
            key="cartIndicator"
    ></script>
    <script type="application/jay-data">
      data:
    </script>
    <link rel="stylesheet" href="../../../styles/store-theme.css" />
    <style>
      /* Category page specific styles */
      .category-page {
        max-width: var(--container-max);
        margin: 0 auto;
        padding: var(--section-gap) var(--page-padding);
      }

      /* Breadcrumbs */
      .breadcrumbs {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 32px;
        font-size: 14px;
        color: var(--text-secondary);
      }

      .breadcrumbs a {
        color: var(--text-secondary);
        transition: color var(--transition-fast);
      }

      .breadcrumbs a:hover {
        color: var(--accent);
      }

      .breadcrumbs .separator {
        color: var(--text-muted);
      }

      .breadcrumbs .current {
        color: var(--text-primary);
        font-weight: 500;
      }

      /* Category header */
      .category-header {
        margin-bottom: 48px;
        text-align: center;
      }

      .category-header h1 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 16px;
        background: linear-gradient(135deg, var(--text-primary) 0%, var(--accent) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .category-header .description {
        font-size: 1.1rem;
        color: var(--text-secondary);
        max-width: 600px;
        margin: 0 auto 16px;
      }

      .category-header .product-count {
        display: inline-block;
        padding: 6px 16px;
        background: var(--bg-card);
        border-radius: var(--radius-full);
        font-size: 14px;
        color: var(--text-muted);
      }

      /* Category hero image */
      .category-hero {
        width: 100%;
        height: 300px;
        border-radius: var(--radius-lg);
        overflow: hidden;
        margin-bottom: 48px;
        background: var(--bg-card);
      }

      .category-hero img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      /* Toolbar */
      .category-toolbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 16px;
        margin-bottom: 32px;
        padding: 16px 24px;
        background: var(--bg-card);
        border-radius: var(--radius-md);
        border: 1px solid var(--border);
      }

      .category-toolbar .result-count {
        font-size: 14px;
        color: var(--text-secondary);
      }

      .category-toolbar .sort-section {
        display: flex;
        align-items: center;
        gap: 12px;
      }

      .category-toolbar .sort-section label {
        font-size: 14px;
        color: var(--text-muted);
      }

      /* Loading overlay */
      .loading-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(10, 10, 15, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 100;
      }

      .loading-spinner {
        width: 48px;
        height: 48px;
        border: 3px solid var(--border);
        border-top-color: var(--accent);
        border-radius: 50%;
        animation: spin 1s linear infinite;
      }

      @keyframes spin {
        to { transform: rotate(360deg); }
      }

      /* Empty state */
      .empty-state {
        text-align: center;
        padding: 80px 40px;
        background: var(--bg-card);
        border-radius: var(--radius-lg);
        border: 1px solid var(--border);
      }

      .empty-state h2 {
        font-size: 1.5rem;
        margin-bottom: 8px;
        color: var(--text-primary);
      }

      .empty-state p {
        color: var(--text-secondary);
        margin-bottom: 24px;
      }

      /* Product grid */
      .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 24px;
      }

      /* Pagination */
      .pagination-section {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 16px;
        margin-top: 48px;
        padding: 24px;
      }

      .pagination-section .page-info {
        font-size: 14px;
        color: var(--text-secondary);
      }

      .pagination-section button {
        min-width: 100px;
      }

      /* Page numbers */
      .page-numbers {
        display: flex;
        gap: 8px;
      }

      .page-numbers button {
        min-width: 40px;
        padding: 8px;
      }

      .page-numbers button.current {
        background: var(--accent);
        color: white;
      }

      /* Filters sidebar (optional) */
      .filters-section {
        margin-bottom: 32px;
        padding: 24px;
        background: var(--bg-card);
        border-radius: var(--radius-md);
        border: 1px solid var(--border);
      }

      .filters-section h3 {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 16px;
        color: var(--text-primary);
      }

      .filter-group {
        margin-bottom: 20px;
      }

      .filter-group label {
        display: block;
        font-size: 14px;
        color: var(--text-secondary);
        margin-bottom: 8px;
      }

      .filter-group .price-inputs {
        display: flex;
        gap: 8px;
        align-items: center;
      }

      .filter-group .price-inputs input {
        width: 100px;
      }

      .filter-group .price-inputs span {
        color: var(--text-muted);
      }

      .filter-actions {
        display: flex;
        gap: 12px;
      }
    </style>
  </head>
  <body>
    <div class="category-page">
      <!-- Site Header with Cart -->
      <header class="site-header">
        <a href="/products" class="site-logo">Store<span>.</span></a>
        <nav class="site-nav">
          <a href="/categories">Categories</a>
          <a href="/products">Products</a>
          <a href="/cart" 
             class="cart-indicator {cartIndicator.hasItems ? has-items} {cartIndicator.isLoading ? is-loading}" 
             ref="cartIndicator.cartLink">
            <span class="cart-indicator-icon">üõí</span>
            <span class="cart-indicator-count" if="cartIndicator.hasItems">{cartIndicator.itemCount}</span>
          </a>
        </nav>
      </header>

      <!-- Breadcrumbs -->
      <nav class="breadcrumbs">
        <a href="/categories">All Categories</a>
        <span forEach="categoryPage.breadcrumbs" trackBy="categoryId">
          <span class="separator">/</span>
          <a href="/categories/{categorySlug}" 
             ref="categoryPage.breadcrumbs.categoryLink">
            {categoryName}
          </a>
        </span>
      </nav>

      <!-- Category Hero Image (if has media) -->
      <div class="category-hero" if="categoryPage.media.mainMedia">
        <img src="{categoryPage.media.mainMedia.url}" alt="{categoryPage.media.mainMedia.altText}" />
      </div>

      <!-- Category Header -->
      <header class="category-header">
        <h1>{categoryPage.name}</h1>
        <p class="description" if="categoryPage.description">{categoryPage.description}</p>
        <span class="product-count">{categoryPage.numberOfProducts} products</span>
      </header>

      <!-- Toolbar -->
      <div class="category-toolbar">
        <span class="result-count">
          Showing {categoryPage.pagination.totalProducts} products
        </span>
        <div class="sort-section">
          <label>Sort by:</label>
          <select class="select" ref="categoryPage.sortBy.sortDropdown">
            <option value="newest" selected="categoryPage.sortBy.currentSort == newest">Newest</option>
            <option value="priceAsc" selected="categoryPage.sortBy.currentSort == priceAsc">Price: Low to High</option>
            <option value="priceDesc" selected="categoryPage.sortBy.currentSort == priceDesc">Price: High to Low</option>
            <option value="nameAsc" selected="categoryPage.sortBy.currentSort == nameAsc">Name: A-Z</option>
            <option value="nameDesc" selected="categoryPage.sortBy.currentSort == nameDesc">Name: Z-A</option>
          </select>
        </div>
      </div>

      <!-- Filters Section -->
      <div class="filters-section">
        <h3>Filters</h3>
        <div class="filter-group">
          <label>Price Range</label>
          <div class="price-inputs">
            <input type="number" 
                   class="input" 
                   placeholder="Min"
                   value="{categoryPage.filters.priceRange.minPrice}"
                   ref="categoryPage.filters.priceRange.minPrice" />
            <span>to</span>
            <input type="number" 
                   class="input" 
                   placeholder="Max"
                   value="{categoryPage.filters.priceRange.maxPrice}"
                   ref="categoryPage.filters.priceRange.maxPrice" />
            <button class="btn btn-secondary" ref="categoryPage.filters.priceRange.applyPriceFilter">
              Apply
            </button>
          </div>
        </div>
        <div class="filter-group">
          <label class="checkbox-label">
            <input type="checkbox" 
                   checked="{categoryPage.filters.inStockOnly}"
                   ref="categoryPage.filters.inStockOnly" />
            In stock only
          </label>
        </div>
        <div class="filter-actions">
          <button class="btn btn-secondary" ref="categoryPage.filters.clearFilters">
            Clear Filters
          </button>
        </div>
      </div>

      <!-- Loading Overlay -->
      <div class="loading-overlay" if="categoryPage.isLoading">
        <div class="loading-spinner"></div>
      </div>

      <!-- Empty State -->
      <div class="empty-state" if="!categoryPage.hasProducts">
        <h2>No products found</h2>
        <p>This category doesn't have any products yet.</p>
        <a href="/products" class="btn btn-primary">Browse All Products</a>
      </div>

      <!-- Product Grid -->
      <div class="product-grid" if="categoryPage.hasProducts">
        <article class="product-card" 
                 forEach="categoryPage.products" 
                 trackBy="_id">
          <div class="product-card-wrapper">
            <a href="{productUrl}" class="product-card-image">
              <img src="{thumbnail.url}" alt="{thumbnail.altText}" loading="lazy" />
              <span class="badge badge-accent ribbon" if="hasRibbon">{ribbon.name}</span>
            </a>
            
            <div class="product-card-content">
              <a href="{productUrl}" class="product-card-name">{name}</a>
              <span class="brand-text" if="brand.name">{brand.name}</span>
              
              <div class="product-card-price">
                <span class="price">{actualPriceRange.minValue.formattedAmount}</span>
                <span class="compare-price" if="hasDiscount">{compareAtPriceRange.minValue.formattedAmount}</span>
              </div>
              
              <div class="stock-badge badge-success" if="inventory.availabilityStatus == IN_STOCK">
                <span class="stock-dot"></span>
                In Stock
              </div>
              <div class="stock-badge badge-error" if="inventory.availabilityStatus == OUT_OF_STOCK">
                <span class="stock-dot"></span>
                Out of Stock
              </div>
              
              <!-- SIMPLE: Regular add to cart -->
              <button class="btn btn-secondary btn-block {isAddingToCart ? is-loading}" 
                      ref="categoryPage.products.addToCartButton"
                      if="quickAddType == SIMPLE"
                      disabled="inventory.availabilityStatus == OUT_OF_STOCK">
                <span if="!isAddingToCart">Add to Cart</span>
                <span if="isAddingToCart">Adding...</span>
              </button>
              
              <!-- SINGLE_OPTION: Quick options -->
              <div class="quick-options-area" if="quickAddType == SINGLE_OPTION">
                <span class="select-option-hint">Select {quickOption.name}</span>
                <div class="quick-options-buttons">
                  <button class="quick-option-btn {!inStock ? out-of-stock} {isSelected ? selected}"
                          forEach="quickOption.choices" 
                          trackBy="choiceId"
                          ref="categoryPage.products.quickOption.choices.choiceButton"
                          disabled="!inStock">
                    {name}
                  </button>
                </div>
              </div>
              
              <!-- NEEDS_CONFIGURATION: View Options -->
              <a href="{productUrl}" 
                 class="btn btn-secondary btn-block"
                 if="quickAddType == NEEDS_CONFIGURATION">
                View Options
              </a>
            </div>
          </div>
        </article>
      </div>

      <!-- Pagination -->
      <nav class="pagination-section" if="categoryPage.pagination.totalPages > 1">
        <button class="btn btn-secondary" 
                ref="categoryPage.pagination.prevButton"
                disabled="categoryPage.pagination.currentPage <= 1">
          ‚Üê Previous
        </button>
        
        <div class="page-numbers">
          <button class="btn btn-secondary {isCurrent ? current}"
                  forEach="categoryPage.pagination.pageNumbers"
                  trackBy="pageNumber"
                  ref="categoryPage.pagination.pageNumbers.pageButton">
            {pageNumber}
          </button>
        </div>
        
        <span class="page-info">
          Page {categoryPage.pagination.currentPage} of {categoryPage.pagination.totalPages}
        </span>
        
        <button class="btn btn-secondary" 
                ref="categoryPage.pagination.nextButton"
                disabled="categoryPage.pagination.currentPage >= categoryPage.pagination.totalPages">
          Next ‚Üí
        </button>
      </nav>
    </div>
  </body>
</html>
