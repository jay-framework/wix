<html>
  <head>
    <script type="application/jay-headless"
            plugin="@jay-framework/wix-stores"
            contract="category-list"
            key="categoryList"
    ></script>
    <script type="application/jay-headless"
            plugin="@jay-framework/wix-stores"
            contract="cart-indicator"
            key="cartIndicator"
    ></script>
    <script type="application/jay-data">
      data:
    </script>
    <link rel="stylesheet" href="../styles/store-theme.css" />
    <style>
      /* Home page styles */
      .home-page {
        max-width: var(--container-max);
        margin: 0 auto;
        padding: var(--section-gap) var(--page-padding);
      }

      /* Hero section */
      .hero-section {
        text-align: center;
        padding: 80px 40px;
        margin-bottom: 64px;
        background: linear-gradient(135deg, var(--bg-card) 0%, var(--bg-elevated) 100%);
        border-radius: var(--radius-lg);
        border: 1px solid var(--border);
      }

      .hero-section h1 {
        font-size: 4rem;
        font-weight: 800;
        margin-bottom: 16px;
        background: linear-gradient(135deg, var(--text-primary) 0%, var(--accent) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .hero-section p {
        font-size: 1.3rem;
        color: var(--text-secondary);
        max-width: 600px;
        margin: 0 auto 32px;
      }

      .hero-cta {
        display: inline-flex;
        gap: 16px;
      }

      /* Categories section */
      .categories-section {
        margin-bottom: 64px;
      }

      .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 32px;
      }

      .section-header h2 {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-primary);
      }

      .section-header a {
        color: var(--accent);
        font-weight: 500;
      }

      /* Categories grid */
      .categories-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 24px;
      }

      /* Category card */
      .category-card {
        position: relative;
        border-radius: var(--radius-lg);
        overflow: hidden;
        background: var(--bg-card);
        border: 1px solid var(--border);
        transition: all var(--transition-base);
      }

      .category-card:hover {
        border-color: var(--accent);
        transform: translateY(-4px);
        box-shadow: var(--shadow-accent);
      }

      .category-card-link {
        display: block;
        text-decoration: none;
        color: inherit;
      }

      .category-card-image {
        width: 100%;
        height: 180px;
        background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-elevated) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
      }

      .category-card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .category-card-image .placeholder-icon {
        font-size: 3rem;
        color: var(--accent);
      }

      .category-card-content {
        padding: 20px;
      }

      .category-card-name {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 4px;
      }

      .category-card-count {
        font-size: 14px;
        color: var(--text-muted);
      }

      .category-card-arrow {
        position: absolute;
        bottom: 20px;
        right: 20px;
        font-size: 1.25rem;
        color: var(--accent);
        opacity: 0;
        transition: opacity var(--transition-fast);
      }

      .category-card:hover .category-card-arrow {
        opacity: 1;
      }

      /* Empty state */
      .empty-state {
        text-align: center;
        padding: 60px 40px;
        background: var(--bg-card);
        border-radius: var(--radius-lg);
        border: 1px solid var(--border);
      }

      .empty-state h3 {
        font-size: 1.25rem;
        margin-bottom: 8px;
        color: var(--text-primary);
      }

      .empty-state p {
        color: var(--text-secondary);
        margin-bottom: 24px;
      }
    </style>
  </head>
  <body>
    <div class="home-page">
      <!-- Site Header with Cart -->
      <header class="site-header">
        <a href="/" class="site-logo">Store<span>.</span></a>
        <nav class="site-nav">
          <a href="/" class="active">Home</a>
          <a href="/products">Products</a>
          <a href="/cart" 
             class="cart-indicator {cartIndicator.hasItems ? has-items} {cartIndicator.isLoading ? is-loading}" 
             ref="cartIndicator.cartLink">
            <span class="cart-indicator-icon">ðŸ›’</span>
            <span class="cart-indicator-count" if="cartIndicator.hasItems">{cartIndicator.itemCount}</span>
          </a>
        </nav>
      </header>

      <!-- Hero Section -->
      <section class="hero-section">
        <h1>Welcome to Store</h1>
        <p>Discover our curated collection of premium products. Browse by category or explore all items.</p>
        <div class="hero-cta">
          <a href="/products" class="btn btn-primary">Browse Products</a>
        </div>
      </section>

      <!-- Categories Section -->
      <section class="categories-section">
        <div class="section-header">
          <h2>Shop by Category</h2>
          <a href="/products">View all products â†’</a>
        </div>

        <!-- Categories Grid -->
        <div class="categories-grid" if="categoryList.hasCategories">
          <article class="category-card" 
                   forEach="categoryList.categories" 
                   trackBy="_id">
            <a href="/categories/{slug}" class="category-card-link" ref="categoryList.categories.categoryLink">
              <div class="category-card-image">
                <img src="{imageUrl}" alt="{name}" if="imageUrl" loading="lazy" />
                <span class="placeholder-icon" if="!imageUrl">ðŸ“¦</span>
              </div>
              <div class="category-card-content">
                <h3 class="category-card-name">{name}</h3>
                <span class="category-card-count">{productCount} products</span>
              </div>
              <span class="category-card-arrow">â†’</span>
            </a>
          </article>
        </div>

        <!-- Empty state -->
        <div class="empty-state" if="!categoryList.hasCategories">
          <h3>No Categories Yet</h3>
          <p>Categories will appear here once they're created.</p>
          <a href="/products" class="btn btn-primary">Browse All Products</a>
        </div>
      </section>
    </div>
  </body>
</html>
